{{#if payload}}
	{{#if user}}
		<p>Hola {{user.username}}</p>
	{{/if}}
	<h1>Productos</h1>
	<div>
		{{#each payload}}
			<div>
				<h2>{{this.title}}</h2>
				<p><b>Descripción:</b> {{this.description}}</p>
				<p><b>Precio: $</b>{{this.price}}</p>
				<p><b>Código:</b> {{this.code}}</p>
				<p><b>Stock:</b> {{this.stock}}</p>
			</div>
		{{/each}}
	</div>
{{else}}
	<strong>[!] Nos robaron todo!!</strong>
{{/if}}

<div>
	{{#if hasPrevPage}}
		<a href='?page={{prevPage}}'>Prev</a>
	{{/if}}
	{{#if hasNextPage}}
		<a href='?page={{nextPage}}'>Next</a>
	{{/if}}
</div>

{{#if user}}
	<div>
		<form action='/logout' method='get'>
			<button type='submit'>Cerrar Sesión</button>
		</form>
	</div>
{{/if}}